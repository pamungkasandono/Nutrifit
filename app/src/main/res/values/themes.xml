<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nutrifit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greentea_200</item>
        <item name="colorSecondaryVariant">@color/greentea_700</item>
        <item name="colorOnSecondary">@color/black_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
    </style>

    <style name="TextBeranda">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:letterSpacing">0.14</item>
    </style>

    <style name="TextBeranda.Title">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBeranda.SubTitle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
