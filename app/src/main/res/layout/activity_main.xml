<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/framelayout1"
            android:layout_width="match_parent"
            android:layout_height="263dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_header"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_logo"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/framelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_banner_beranda"
                android:orientation="vertical"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp"
                    android:text="SELAMAT\nDATANG"
                    android:textAppearance="@style/TextBeranda.Title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:text="Yuk cek nutrisi\nmakanan kita\ndisini!"
                    android:textAppearance="@style/TextBeranda.SubTitle" />

            </LinearLayout>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/ic_logo_beranda"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/framelayout1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="25dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_search"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Makan apa anda hari ini?"
                        android:inputType="text"
                        android:maxLength="300"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbars="horizontal"
                        android:textCursorDrawable="@drawable/ac_edittext_cursor"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/bg_search_icon"
                        android:padding="6dp"
                        android:src="@drawable/ic_search" />

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearlayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearlayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/bg_upload">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="22dp"
                        android:src="@drawable/ic_upload" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearlayout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="19dp"
                    android:text="Upload foto makanan anda"
                    android:textSize="14sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp"
                    android:text="news feed"
                    android:textAppearance="@style/TextBeranda.Title"
                    android:textColor="@color/gray_8e_text_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>